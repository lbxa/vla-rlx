---
import { Icon } from 'astro-icon/components';

export interface Props {
  href: string;
  type: 'arxiv' | 'github' | 'huggingface' | 'website' | 'dataset' | 'other';
  class?: string;
}

const { href, type, class: className = "" } = Astro.props;

const buttonStyles = {
  arxiv: "text-red-600 hover:text-red-700",
  github: "text-nerfies-gray-800 hover:text-nerfies-gray-900", 
  huggingface: "text-yellow-600 hover:text-yellow-700",
  website: "text-nerfies-primary hover:text-nerfies-primary-hover",
  dataset: "text-purple-600 hover:text-purple-700",
  other: "text-nerfies-primary hover:text-nerfies-primary-hover"
};

const iconNames = {
  arxiv: "arxiv",
  github: "mdi:github",
  huggingface: "hf",
  website: "mdi:web",
  dataset: "mdi:database",
  other: "mdi:link-variant"
};
---

<a 
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`inline-flex items-center gap-sm rounded px-md py-sm font-medium transition-all duration-200 ${buttonStyles[type]} ${className}`}
>
  <slot />
  <Icon name={iconNames[type]} size={20} />
</a>